{
    "extends": ["stylelint-config-standard-scss", "stylelint-config-recess-order"],
    "plugins": ["stylelint-order"],
    "rules": {
        "selector-pseudo-element-no-unknown": [
            true,
            {
                "ignorePseudoElements": ["ng-deep"]
            }
        ],
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": ["host", "host-context", "global"]
            }
        ],
        "selector-type-no-unknown": [
            true,
            {
                "ignoreTypes": ["/^app-/", "/^mat-/", "/^cdk-/", "/^ng-/", "/^router-/", "/^platform-/", "/^platform-example-web-/"]
            }
        ],
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["tailwind", "apply", "layer", "config"]
            }
        ],
        "selector-disallowed-list": [
            ["/^::ng-deep/"],
            {
                "splitList": true,
                "message": "Avoid ::ng-deep at root level. Use :host ::ng-deep instead to scope styles."
            }
        ],
        "max-nesting-depth": [
            3,
            {
                "ignoreAtRules": ["include", "media", "supports", "if", "else", "each", "for"],
                "ignorePseudoClasses": ["host", "host-context"]
            }
        ],
        "scss/dollar-variable-pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
        "scss/percent-placeholder-pattern": null,
        "scss/at-mixin-pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
        "scss/at-function-pattern": null,
        "scss/no-duplicate-mixins": true,
        "scss/no-duplicate-dollar-variables": [
            true,
            {
                "ignoreInside": ["at-rule", "nested-at-rule"],
                "ignoreInsideAtRules": ["if", "else", "each", "for", "mixin"]
            }
        ],
        "scss/selector-no-redundant-nesting-selector": true,
        "scss/load-partial-extension": "never",
        "declaration-block-no-redundant-longhand-properties": true,
        "shorthand-property-no-redundant-values": true,
        "color-function-notation": "modern",
        "alpha-value-notation": "percentage",
        "import-notation": "string",
        "selector-class-pattern": null,
        "no-descending-specificity": null,
        "no-empty-source": null,
        "no-duplicate-selectors": null,
        "keyframes-name-pattern": null,
        "property-no-vendor-prefix": [
            true,
            {
                "ignoreProperties": ["appearance", "backdrop-filter"]
            }
        ],
        "value-no-vendor-prefix": [
            true,
            {
                "ignoreValues": ["grab", "grabbing"]
            }
        ],
        "scss/operator-no-unspaced": null
    },
    "overrides": [
        {
            "files": ["**/themes/**/*.scss", "**/*-theme.scss"],
            "rules": {
                "scss/dollar-variable-pattern": null,
                "max-nesting-depth": null
            }
        }
    ],
    "ignoreFiles": ["node_modules/**", "dist/**", "coverage/**", ".nx/**"]
}
