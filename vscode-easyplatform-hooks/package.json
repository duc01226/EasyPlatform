{
    "name": "easyplatform-hooks",
    "displayName": "EasyPlatform Hooks",
    "description": "Claude Code hook system replication for EasyPlatform workspace",
    "version": "0.1.0",
    "publisher": "easyplatform",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onLanguage:csharp",
        "onLanguage:typescript",
        "workspaceContains:.claude/settings.json"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "EasyPlatform Hooks",
            "properties": {
                "easyplatform.hooks.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable all hooks"
                },
                "easyplatform.hooks.privacy.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable privacy blocking"
                },
                "easyplatform.hooks.privacy.patterns": {
                    "type": "array",
                    "default": [
                        "**/.env*",
                        ".env*",
                        "**/secrets/**",
                        "**/credentials*"
                    ],
                    "description": "File patterns to block"
                },
                "easyplatform.hooks.scout.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable scout pattern warnings"
                },
                "easyplatform.hooks.scout.broadPatterns": {
                    "type": "array",
                    "default": [
                        "**/*",
                        "**/*.{ts,js,cs}"
                    ],
                    "description": "Patterns considered too broad"
                },
                "easyplatform.hooks.formatting.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-format after save"
                },
                "easyplatform.hooks.formatting.languages": {
                    "type": "array",
                    "default": [
                        "typescript",
                        "javascript",
                        "csharp",
                        "json",
                        "markdown"
                    ],
                    "description": "Languages to format"
                },
                "easyplatform.hooks.editTracking.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Track file edits"
                },
                "easyplatform.hooks.todoTracking.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Track todo changes"
                },
                "easyplatform.notification.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable notifications"
                },
                "easyplatform.notification.provider": {
                    "type": "string",
                    "enum": [
                        "discord",
                        "slack",
                        "custom"
                    ],
                    "default": "discord",
                    "description": "Notification provider"
                },
                "easyplatform.notification.events": {
                    "type": "array",
                    "default": [
                        "file:saved",
                        "task:completed"
                    ],
                    "description": "Events to notify"
                },
                "easyplatform.ace.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable ACE integration"
                },
                "easyplatform.patterns.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable pattern learning"
                }
            }
        },
        "commands": [
            {
                "command": "easyplatform.clearSession",
                "title": "EasyPlatform: Clear Session"
            },
            {
                "command": "easyplatform.compactContext",
                "title": "EasyPlatform: Compact Context"
            },
            {
                "command": "easyplatform.learnPattern",
                "title": "EasyPlatform: Learn Pattern"
            },
            {
                "command": "easyplatform.syncInstructions",
                "title": "EasyPlatform: Sync Instructions to Copilot"
            },
            {
                "command": "easyplatform.viewEditStats",
                "title": "EasyPlatform: View Edit Statistics"
            },
            {
                "command": "easyplatform.configureWebhook",
                "title": "EasyPlatform: Configure Webhook URL"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/micromatch": "^4.0.6",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vscode/test-electron": "^2.3.8",
        "eslint": "^8.56.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "fast-glob": "^3.3.2",
        "micromatch": "^4.0.5"
    }
}
