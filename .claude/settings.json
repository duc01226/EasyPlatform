{
  "alwaysThinkingEnabled": true,
  "attribution": {
    "commit": "Generated with [Claude Code](https://claude.com/claude-code)",
    "pr": "Generated with [Claude Code](https://claude.com/claude-code)"
  },
  "cleanupPeriodDays": 30,
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "csharp-lsp@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "playwright@claude-plugins-official": false,
    "typescript-lsp@claude-plugins-official": true
  },
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "MCP_TIMEOUT": "30000"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/notify-waiting.js",
            "type": "command"
          }
        ],
        "matcher": "idle_prompt|AskUserPrompt"
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/tool-output-swap.cjs",
            "type": "command"
          }
        ],
        "matcher": "Read|Grep|Glob"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/bash-cleanup.cjs",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-edit-prettier.cjs",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/todo-tracker.cjs",
            "type": "command"
          }
        ],
        "matcher": "TaskCreate|TaskUpdate"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/workflow-step-tracker.cjs",
            "type": "command"
          }
        ],
        "matcher": "Skill"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/tool-counter.cjs",
            "type": "command"
          }
        ],
        "matcher": "Bash|Edit|Write|Read|Grep|Glob|Task"
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/write-compact-marker.cjs",
            "type": "command"
          }
        ],
        "matcher": "manual|auto"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/windows-command-detector.cjs",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scout-block.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/privacy-block.cjs",
            "type": "command"
          }
        ],
        "matcher": "Bash|Glob|Grep|Read|Edit|Write|NotebookEdit"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/path-boundary-block.cjs",
            "type": "command"
          }
        ],
        "matcher": "Bash|Edit|Write|MultiEdit|NotebookEdit"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/edit-enforcement.cjs",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write|MultiEdit|NotebookEdit"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/skill-enforcement.cjs",
            "type": "command"
          }
        ],
        "matcher": "Skill"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/code-review-rules-injector.cjs",
            "type": "command"
          }
        ],
        "matcher": "Skill"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lessons-injector.cjs",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/search-before-code.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/design-system-context.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/code-patterns-injector.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/backend-csharp-context.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/frontend-typescript-context.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scss-styling-context.cjs",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/role-context-injector.cjs",
            "type": "command"
          }
        ],
        "matcher": "Read|Write"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/figma-context-extractor.cjs",
            "type": "command"
          }
        ],
        "matcher": "Read"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/artifact-path-resolver.cjs",
            "type": "command"
          }
        ],
        "matcher": "Write"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/path-boundary-block.cjs",
            "type": "command"
          }
        ],
        "matcher": "mcp__filesystem__*"
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-end.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/notify-waiting.js",
            "type": "command"
          }
        ],
        "matcher": "clear|exit|compact"
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/notify-waiting.js",
            "type": "command"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-init.cjs",
            "type": "command"
          }
        ],
        "matcher": "startup|resume|clear|compact"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-compact-recovery.cjs",
            "type": "command"
          }
        ],
        "matcher": "resume|compact"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-resume.cjs",
            "type": "command"
          }
        ],
        "matcher": "resume"
      },
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/npm-auto-install.cjs",
            "type": "command"
          }
        ],
        "matcher": "startup"
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/subagent-init.cjs",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/workflow-router.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/dev-rules-reminder.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lessons-injector.cjs",
            "type": "command"
          },
          {
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/init-reference-docs.cjs",
            "type": "command"
          }
        ]
      }
    ]
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "ask": ["Bash(git push:*)", "Bash(npm publish:*)", "Bash(docker push:*)"],
    "defaultMode": "bypassPermissions",
    "deny": [
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf .)",
      "Bash(rm -rf /)",
      "Bash(del /s:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(git branch -D:*)",
      "Bash(git stash drop:*)",
      "Bash(git checkout -- .)",
      "Bash(git restore .)",
      "Edit(**/.env*)",
      "Edit(.env*)",
      "Edit(**/secrets/**)",
      "Edit(**/credentials*)",
      "Edit(**/generated/**)",
      "Edit(**/obj/**)",
      "Edit(**/bin/**)",
      "Edit(**/dist/**)",
      "Edit(**/node_modules/**)",
      "Edit(.github/workflows/**)",
      "Read(**/.env*)",
      "Read(.env*)",
      "Read(**/secrets/**)",
      "Read(**/credentials*)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.config/gcloud/**)",
      "Write(**/.env*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Write(**/credentials*)",
      "Write(**/generated/**)",
      "Write(**/obj/**)",
      "Write(**/bin/**)",
      "Write(**/dist/**)",
      "Write(**/node_modules/**)",
      "Write(.github/workflows/**)"
    ]
  },
  "statusLine": {
    "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/statusline.cjs",
    "padding": 0,
    "type": "command"
  }
}
